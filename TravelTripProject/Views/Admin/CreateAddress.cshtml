@model TravelTripProject.Models.Entities.Address
@{
    ViewBag.Title = "CreateAddress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<h2>İletişim Ekleme</h2>
<br />
<form class="form-group" method="post">

    @Html.Label("Başlık")
    @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    <br />

    @Html.Label("Açıklama")
    @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
    <br />

    @Html.Label("Açık Adres")
    @Html.TextBoxFor(x => x.FullAddress, new { @class = "form-control" })
    <br />

    @Html.Label("Mail")
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    <br />

    @Html.Label("Telefon")
    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
    <br />

    @Html.Label("Konum")
    @Html.TextBoxFor(x => x.Location, new { @class = "form-control" })
    <br />

    <button class="btn btn-primary">Ekle</button>
</form>
