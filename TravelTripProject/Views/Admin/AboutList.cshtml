@model List<TravelTripProject.Models.Entities.About>
@{
    ViewBag.Title = "AboutList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h1 style="text-align: center;">Hakkımda Alanı</h1>
<br />
<table class="table table-striped table-bordered table-hover">

    <tr>
        <th>#</th>
        <th>Açıklama</th>
        <th>Resim</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>@item.Id</td>
            <td>@(item.Description?.Length > 100 ? item.Description?.Substring(0, 100) + "..." : item.Description)</td>
            <td><img src="@item.ImageUrl" style="width:140px; height:auto;" /></td>
            <td><a href="/Admin/DeleteAbout/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Admin/GetAbout/@item.Id" class="btn btn-success">Güncelle</a></td>

        </tr>
    }
</table>

<a href="/Admin/CreateAbout/" class="btn btn-primary">Yeni Hakkımda Ekle</a>