@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <title>Admin Paneli</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet"> <!-- Font Awesome CDN -->
</head>

<body class="d-flex">

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width: 250px; height: 100vh; display: flex; flex-direction: column;">
        <div class="bg-dark text-white p-3 flex-shrink-0">
            <h3 class="text-center mb-4">Menü</h3>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a href="/Default/Index" class="nav-link text-white p-2 rounded mb-2 hover-link">
                        <i class="fas fa-home me-2"></i> Siteye Git
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Admin/AboutList/" class="nav-link text-white p-2 rounded mb-2 hover-link">
                        <i class="fas fa-info-circle me-2"></i> Hakkımızda
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Admin/Index/" class="nav-link text-white p-2 rounded mb-2 hover-link">
                        <i class="fas fa-blog me-2"></i> Blog
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Admin/CommentList/" class="nav-link text-white p-2 rounded mb-2 hover-link">
                        <i class="fas fa-comments me-2"></i> Yorum
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Admin/AddressList/" class="nav-link text-white p-2 rounded mb-2 hover-link">
                        <i class="fas fa-address-book me-2"></i> İletişim
                    </a>
                </li>
                <li class="nav-item">
                    <a href="/Login/Logout/" class="nav-link text-white p-2 rounded mb-2 hover-link">
                        <i class="fas fa-sign-out-alt me-2"></i> Çıkış Yap
                    </a>
                </li>

            </ul>
        </div>
        <!-- Make the remaining space dark -->
        <div class="bg-dark flex-grow-1"></div>
    </div>

    <!-- Main Content -->
    <div style="margin-left: 250px; width: 100%;">

        <!-- Navbar -->
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark justify-content-center">
            <a class="navbar-brand" href="#">Admin Paneli</a>
        </nav>

        <div class="w3-container">
            @RenderBody()
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
