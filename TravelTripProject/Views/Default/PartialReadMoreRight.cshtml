@model List<TravelTripProject.Models.Entities.Blog>

@foreach (var item in Model)
{
    <div class="right">

        <div class="bot-left">
            <img src="@item.ImageUrl" alt="" />
        </div>

        <div class="left-text">

            <h4>@item.Title</h4>

            <span class="doller">@(item.Date?.ToShortDateString() ?? "")</span>

            <p>@(item.Description.Length > 85 ? item.Description.Substring(0, 85) + "..." : item.Description)</p>
            <p><a href="/Blog/BlogDetail/@item.Id/"><span class="read">Devamını Oku >></span></a></p>

        </div>
    </div>
}